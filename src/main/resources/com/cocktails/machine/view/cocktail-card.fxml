<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import io.github.palexdev.mfxresources.fonts.MFXFontIcon?>

<VBox fx:id="root" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.cocktails.machine.ui.controller.CocktailCardController"
      styleClass="cocktail-card" prefWidth="320" prefHeight="480" maxWidth="320" maxHeight="480">
    <spacing>0</spacing>

    <!-- Top section (image area) - Better proportions using 16:9 ratio -->
    <StackPane prefHeight="280" styleClass="cocktail-card-image-container">
        <ImageView fx:id="cocktailImage" fitWidth="280" fitHeight="280" preserveRatio="true" pickOnBounds="true">
            <StackPane.alignment>CENTER</StackPane.alignment>
        </ImageView>
        <!-- Favorite indicator (top-right corner) -->
        <MFXFontIcon fx:id="favoriteIcon" description="fas-star" size="24.0"
                     styleClass="favorite-icon">
            <StackPane.alignment>TOP_RIGHT</StackPane.alignment>
            <StackPane.margin>
                <Insets top="12" right="12"/>
            </StackPane.margin>
        </MFXFontIcon>
    </StackPane>

    <!-- Bottom section (text area) - Apple HIG: generous padding, 8px grid -->
    <VBox spacing="8" prefHeight="200" styleClass="cocktail-card-content" alignment="TOP_LEFT">
        <padding><Insets top="20" bottom="20" left="20" right="20"/></padding>

        <Label fx:id="nameLabel" styleClass="cocktail-name" wrapText="true" maxWidth="280"/>
        <Label fx:id="descriptionLabel" styleClass="cocktail-description" wrapText="true" maxWidth="280"/>
    </VBox>
</VBox>

